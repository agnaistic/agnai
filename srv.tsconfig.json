{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "CommonJS",
    "incremental": true,
    "moduleResolution": "node",
    "noEmit": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "/srv/*": ["./srv/*"],
      "/common/*": ["./common/*"]
    }
  },
  "include": ["srv", "common", "tests"]
}
